            <h1 class="h3 mb-3 fw-normal" style="margin-top: 2rem">
                Welcome back <%= fullName %>!
            </h1>
            <p>Create your event</p>
            <form
                class="row g-3"
                method="post"
                action="/event/create-new-event"
            >
                <div class="col-md-6">
                    <label for="inputEmail4" class="form-label"
                        >Your Name</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="username"
                        value="<%= fullName %>"
                        readonly
                        name="playerOne"
                    />
                </div>
                <div class="col-md-4">
                    <label for="inputState" class="form-label"
                        >Choose player 2</label
                    >
                    <select
                        id="inputState"
                        class="form-select"
                        name="playerTwo"
                    >
                        <% for(let i = 0; i < playerTwo.length; i++) { %>
                        <option value="<%=playerTwo[i]._id%>">
                            <%=playerTwo[i].fullName%>
                        </option>
                        <% } %>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="inputCity" class="form-label"
                        >Choose your date</label
                    >
                    <input
                        type="datetime-local"
                        class="form-control"
                        id="date"
                        name="date"
                    />
                </div>

                <div class="col-md-4">
                    <label for="inputPassword4" class="form-label"
                        >Match Name</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        id="titlematch"
                        name="titleMatch"
                    />
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        Create
                    </button>
                </div>
            </form>
        </main>
        <%if (typeof eventHistory != "undefined" && eventHistory.length > 0) {
        %>
        <main class="container mt-5">
            <h1>Match History</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">You vs.</th>
                        <th scope="col">Player</th>
                        <th scope="col">At</th>
                        <th scope="col">Title</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < eventHistory.length; i++) { %> <%
                    const playerOne = eventHistory[i].playerOne &&
                    eventHistory[i].playerOne.fullName; const playerTwo =
                    eventHistory[i].playerTwo &&
                    eventHistory[i].playerTwo.fullName; console.log(playerOne)
                    %>
                    <tr>
                        <th scope="row"><%=i + 1%></th>
                        <td><%=playerOne%></td>
                        <td><%=playerTwo%></td>
                        <td>
                            <%=eventHistory[i].date.toString().replace(/\sGMT\+\d+\s\(.+\)$/,
                            "")%>
                        </td>
                        <td><%=eventHistory[i].titleMatch%></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </main>
        <% } %>
