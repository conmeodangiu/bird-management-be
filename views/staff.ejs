<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Staff</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
        <link
            rel="canonical"
            href="https://getbootstrap.com/docs/5.0/examples/carousel/"
        />

        <link href="carousel.css" rel="stylesheet" />
        <style>
            a {
                text-decoration: none;
            }
        </style>
    </head>

    <body>
        <header class="p-3 bg-dark text-white fixed-top">
            <div class="container">
                <div
                    class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
                >
                    <ul
                        class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"
                    >
                        <li>
                            <a href="/" class="nav-link px-2 text-white"
                                >Home</a
                            >
                        </li>
                        <li>
                            <a
                                href="/event"
                                class="nav-link px-2 text-white"
                                >Match Manage</a
                            >
                        </li>
                        <li>
                            <a href="/user" class="nav-link px-2 text-white"
                                >Profile</a
                            >
                        </li>
                        <li>
                            <a href="/staff" class="nav-link px-2 text-white"
                                >Staff Manage</a
                            >
                        </li>
                    </ul>

                    <div class="text-end">
                        <button
                            type="button"
                            class="btn btn-outline-light me-2"
                            id="logout-btn"
                        >
                            <a href="/auth/logout">Logout</a>
                        </button>
                    </div>
                </div>
            </div>
        </header>
        <!-- Content -->

        <main class="container" style="margin-top: 5rem">
            <h1 style="text-align: center">Member Management</h1>
            <div class="p-3 rounded">
                <div class="d-flex flex-row">
                    <div
                        class="container-fluid d-flex flex-column px-5 text-dark"
                    >
                        <div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">No</th>
                                        <th scope="col">Username</th>
                                        <th scope="col">Full name</th>
                                        <th scope="col">Role</th>
                                        <th scope="col">Create at</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let i = 0; user.forEach(user => { i++;%>
                                    <tr>
                                        <td><%= i %></td>
                                        <td><%= user.username %></td>
                                        <td><%= user.fullName %></td>
                                        <td><%= user.role%></td>
                                        <td>
                                            <%=
                                            user.createdAt.toString().replace(/\sGMT\+\d+\s\(.+\)$/,
                                            "")%>
                                        </td>
                                        <td class="d-flex flex-row">
                                            <button
                                                type="button"
                                                class="btn btn-success"
                                            >
                                                <a
                                                    href="/staff/edit/<%= user._id %>"
                                                    style="
                                                        color: white;
                                                        text-decoration: none;
                                                    "
                                                    >Update</a
                                                >
                                            </button>
                                            <form
                                                method="get"
                                                action="/staff/delete/<%= user._id %>"
                                            >
                                                <button
                                                    type="submit"
                                                    class="btn btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this orchid?')"
                                                >
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% })%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include("footer");%>
    </body>
</html>
