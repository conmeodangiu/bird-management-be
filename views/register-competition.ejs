<style>
	body {
  /* width: 500px; */
  margin: 0 auto;
  padding: 50px;
}

div.elem-group {
  margin: 20px 0;
}

div.elem-group.inlined {
  width: 49%;
  display: inline-block;
  float: left;
  margin-left: 1%;
}

label {
  display: block;
  font-family: 'Nanum Gothic';
  padding-bottom: 10px;
  font-size: 1.25em;
}

input, select, textarea {
  border-radius: 2px;
  border: 2px solid #777;
  box-sizing: border-box;
  font-size: 1.25em;
  font-family: 'Nanum Gothic';
  width: 100%;
  padding: 10px;
}

div.elem-group.inlined input {
  width: 95%;
  display: inline-block;
}

textarea {
  height: 250px;
}

hr {
  border: 1px dotted #ccc;
}

button {
  height: 50px;
  background: orange;
  border: none;
  color: white;
  font-size: 1.25em;
  font-family: 'Nanum Gothic';
  border-radius: 4px;
  cursor: pointer;
}

button:hover {
  border: 2px solid black;
}
</style>
<body>
	<div class="container">
		<h1>Register now</h1>
		<form action="/user/register-competition/<%=eventId%>" method="post">
			<input type="hidden" name="userId" value="<%=userId ? userId : ''%>">
			<div class="elem-group">
			  <label for="name">Bird Type</label>
			  <input type="text" id="type" name="birdType" placeholder="Parrot" pattern=[A-Z\sa-z]{3,20} required>
			</div>
			<div class="elem-group">
				<label for="name">Bird Name</label>
				<input type="text" id="name" name="birdName" placeholder="Bird Name" pattern=[A-Z\sa-z]{3,20} required>
			  </div>
			<hr>
			<div class="elem-group inlined">
			  <label for="adult">Bird Age</label>
			  <input type="number" id="adult" name="birdAge" placeholder="2" min="1" required>
			</div>
			<div class="elem-group inlined">
			  <label for="child">Color</label>
			  <input type="text" id="color" name="birdColor" placeholder="Red, Green, vv" required>
			</div>

			<div class="elem-group">
			  <label for="room-selection">Select Bird's Quantity</label>
			  <select id="room-selection" name="birdQuantity" required>
				  <option value="1" selected>1</option>
			  </select>
			</div>
			<hr>
	
			<button type="submit">Book The Match</button>
		  </form>
		
	</div>
